<resources>
    <!-- Base application theme. -->
    <style name="Theme.NYT.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@android:color/holo_green_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/errorColor</item>
        <item name="android:background">@color/transparent</item>
        <item name="colorSurface">@color/surfaceBgColor</item>
        <item name="android:textViewStyle">@style/Widget.NYT.TextView</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>

        <item name="switchStyle">@style/Widget.App.Switch</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>


    <!--NYT TextView default styles-->

    <style name="Widget.NYT.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/TextViewColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
